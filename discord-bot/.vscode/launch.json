  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Start Bot",
      "skipFiles": ["<node_internals>/**"],
      "command": "doppler run -- node .",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Migrate database",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\scripts\\migrate-database.js",
      "outputCapture": "std"
    }
  ]
}
